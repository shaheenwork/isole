<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
    
   
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
         
        <item name="toolbarStyle">@style/AppThemeToolbar</item>  
  		
  		<item name="android:toolbarStyle" tools:targetApi="21">@style/AppThemeToolbar</item>
         
        <item name="android:actionBarStyle">@style/IsoloActionBar</item>
        <item name="android:actionMenuTextColor">@color/app_secondary_color</item>
        <item name="android:icon">@android:color/transparent</item>
        <item name="android:actionBarItemBackground">@drawable/bg_list_row_white</item>
    </style>
    
        
     <style name="AppThemeTranslucent" parent="AppTheme">
        <item name="windowActionBar">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <!-- Note that we use the base animation style here (that is no
             animations) because we really have no idea how this kind of
             activity will be used. -->
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light">
	    <item name="android:windowNoTitle">true</item>
	    <item name="windowActionBar">false</item>\
	    <item name="android:windowFullscreen">true</item>
	    <item name="android:windowContentOverlay">@null</item>
	</style>
    
    <style name="LblMuseumSelection" parent="@android:style/Widget.TextView">
        <item name="android:textColor">#D2D2D2</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    
    
    
    <style name="PopupTheme" parent="@android:style/Theme.Translucent">
        <item name="android:windowIsFloating">false</item>
	    <item name="android:windowContentOverlay">@null</item>
	    <item name="android:windowSoftInputMode">stateAlwaysHidden</item>
	    <item name="android:windowActionModeOverlay">true</item>
	    <item name="android:windowIsTranslucent">true</item>
	     <item name="android:windowBackground">@android:color/transparent</item>
	     <item name="android:backgroundDimEnabled">false</item>
	</style>
	
    <style name="PopTheme.Settings" parent="@style/PopupTheme">
        <item name="windowActionBar">true</item>
        <item name="android:windowActionBar">true</item>
        <item name="android:windowNoTitle">true</item>
	</style>
	
    
	
    <style name="IsoloActionBar"
           parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/app_primary_color</item>
         <item name="android:titleTextStyle">@style/IsoloActionBarTitleText</item>
         <item name="android:subtitleTextStyle">@style/IsoloActionBarSubTitleText</item>
    </style>
    
      <!-- ActionBar title text -->
    <style name="IsoloActionBarTitleText"
           parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
     <style name="IsoloActionBarSubTitleText"
           parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- ActionBar tabs text styles -->
    <style name="IsoloActionBarTabText"
           parent="@android:style/Widget.Holo.ActionBar.TabText">
        <item name="android:textColor">@color/app_secondary_color</item>
    </style>
    

  <style name="Theme.AppCompat.Light.NoActionBar" parent="@style/Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
  
  </style>
  
   <style name="AppThemeToolbar" parent="Widget.AppCompat.Toolbar" >
	  <item name="contentInsetStart">0dp</item>
	  <item name="android:contentInsetStart" tools:targetApi="21">0dp</item>
	</style>
 
   
</resources>
