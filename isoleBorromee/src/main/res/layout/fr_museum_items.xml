<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pw="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" 
    android:background="#E7E7E7" >
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical">
	    <ImageView 
	        android:id="@+id/imgMuseum"
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/image_museum_section"
	        android:adjustViewBounds="true"
	        android:scaleType="centerCrop"
	        android:src="@drawable/isole_bg"/>
	    
	    <View 
		    android:layout_width="match_parent"
		    android:layout_height="1dp"
		    android:background="#FFFFFF"/>
	    
		<RelativeLayout 
		    android:id="@+id/btnGallery"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:padding="10dp"
		    android:background="@drawable/bg_list_row">
		    <ImageView 
		        android:id="@+id/icGallery"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@drawable/btn_photo_gallery"
		        android:layout_centerVertical="true"
		        android:layout_marginLeft="4dp"
		        android:duplicateParentState="true"/>
		    
		    
		    
		    <FrameLayout 
		        android:id="@+id/layoutInnerBtnGallery"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentRight="true"
		        android:layout_centerVertical="true"
		        android:duplicateParentState="true">
		        <ImageView 
		            android:id="@+id/imgGallerydetail"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:src="@drawable/btn_detail"
		            android:layout_gravity="center_vertical|right"
		            android:duplicateParentState="true"/>
		        <FrameLayout 
		            android:id="@+id/layoutProgressGallery"
		            android:layout_width="38dp"
		            android:layout_height="38dp"
		            android:layout_gravity="center_vertical|right">
			        <com.todddavies.components.progressbar.ProgressWheel
				        android:id="@+id/progressGalleryDownload"
				        android:layout_width="38dp"
				        android:layout_height="38dp"
				        pw:text=""
				        pw:textColor="#222222"
				        pw:textSize="14sp"
				        pw:rimColor="#4000"
				       	pw:barLength="30dp" 
				        pw:barColor="#222"
				        pw:barWidth="4dp"
				        pw:rimWidth="1dp" 
				        pw:spinSpeed="10dp"
				        pw:delayMillis="0" 
				        android:duplicateParentState="true"/>
			        <FrameLayout 
			            android:id="@+id/btnPauseGallery"
			            android:layout_width="match_parent"
			            android:layout_height="match_parent">
			            <View 
				            android:layout_width="match_parent"
				            android:layout_height="match_parent"
				            android:background="#222222"
				            android:layout_margin="14dp"/>
			        </FrameLayout>
			        
		        </FrameLayout>
		        <com.ezenit.customview.IsoleTextView 
		            android:id="@+id/btnDownloadGallery"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="@string/download"
		            android:background="@drawable/btn_download"
		            android:padding="10dp"
		            android:textSize="16sp"
		            android:textColor="@color/txt_list"
		            android:duplicateParentState="true"/>
		    </FrameLayout>
		    
		    <TextView
		        android:id="@+id/lblGallery"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/photo_gallery"
		        android:layout_centerVertical="true"
		         android:layout_marginLeft="16dp"
		        android:layout_marginRight="16dp"
		        android:layout_toRightOf="@id/icGallery"
		        android:layout_toLeftOf="@id/layoutInnerBtnGallery"
		        android:textColor="@color/txt_list"
		        android:duplicateParentState="true"/>
		    
		    
		</RelativeLayout>
		<View 
		    android:layout_width="match_parent"
		    android:layout_height="1dp"
		    android:background="#FFFFFF"/>
		
		<RelativeLayout 
		    android:id="@+id/btnPaidGuide"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:padding="10dp"
		    android:background="@drawable/bg_list_row">
		    <ImageView 
		        android:id="@+id/icPaidGuide"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@drawable/btn_audio_guide"
		        android:layout_centerVertical="true"
		        android:layout_marginLeft="4dp"
		        android:duplicateParentState="true"/>
		    
		    
		    
		    <FrameLayout 
		        android:id="@+id/layoutInnerBtnPaidGuide"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentRight="true"
		        android:layout_centerVertical="true"
		        android:duplicateParentState="true">
		        <ImageView 
		            android:id="@+id/imgPaidGuidedetail"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:src="@drawable/btn_detail"
		            android:layout_gravity="center_vertical|right"
		            android:duplicateParentState="true"/>
		        <FrameLayout 
		            android:id="@+id/layoutProgressPaidGuide"
		            android:layout_width="38dp"
		            android:layout_height="38dp"
		            android:layout_gravity="center_vertical|right">
			        <com.todddavies.components.progressbar.ProgressWheel
				        android:id="@+id/progressPaidGuideDownload"
				        android:layout_width="38dp"
				        android:layout_height="38dp"
				        pw:text=""
				        pw:textColor="#222222"
				        pw:textSize="14sp"
				        pw:rimColor="#4000"
				       	pw:barLength="30dp" 
				        pw:barColor="#222"
				        pw:barWidth="4dp"
				        pw:rimWidth="1dp" 
				        pw:spinSpeed="10dp"
				        pw:delayMillis="0" 
				        android:duplicateParentState="true"/>
			        <FrameLayout 
			            android:id="@+id/btnPausePaidGuide"
			            android:layout_width="match_parent"
			            android:layout_height="match_parent">
			            <View 
				            android:layout_width="match_parent"
				            android:layout_height="match_parent"
				            android:background="#222222"
				            android:layout_margin="14dp"/>
			        </FrameLayout>
		        </FrameLayout>
		        
		        <com.ezenit.customview.IsoleTextView 
		            android:id="@+id/btnDownloadPaidGuide"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="@string/download"
		            android:background="@drawable/btn_download"
		            android:padding="10dp"
		            android:textSize="16sp"
		            android:textColor="@color/txt_list"
		            android:duplicateParentState="true"/>
		        
		    </FrameLayout>

			<TextView
				android:id="@+id/lblPaidGuide"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_marginLeft="16dp"
				android:layout_marginRight="16dp"
				android:layout_toLeftOf="@id/layoutInnerBtnPaidGuide"
				android:layout_toRightOf="@id/icPaidGuide"
				android:text="@string/audio_guide_palace"
				android:textColor="@color/txt_list" />
		    
		    
		</RelativeLayout>
		
		<View 
		    android:id="@+id/dividerPaidGuide"
		    android:layout_width="match_parent"
		    android:layout_height="1dp"
		    android:background="#FFFFFF"/>
		
		<RelativeLayout 
		    android:id="@+id/btnFreeGuide"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:padding="10dp"
		    android:visibility="gone">
		    <ImageView 
		        android:id="@+id/icFreeGuide"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@drawable/ic_audio_guide_default"
		        android:layout_centerVertical="true"
		        android:layout_marginLeft="4dp"
		       />
		    
		    
		    
		    <FrameLayout 
		        android:id="@+id/layoutInnerBtnFreeGuide"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentRight="true"
		        android:layout_centerVertical="true">
		        <ImageView 
		            android:id="@+id/imgFreeGuideDetail"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:src="@drawable/ic_disclosure_default"/>
		    </FrameLayout>
		    
		    <TextView
		        android:id="@+id/lblFreeGuide"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/audio_guide_general"
		        android:layout_centerVertical="true"
		         android:layout_marginLeft="16dp"
		        android:layout_marginRight="16dp"
		        android:layout_toRightOf="@id/icFreeGuide"
		        android:layout_toLeftOf="@id/layoutInnerBtnFreeGuide"/>
		    
		    
		</RelativeLayout>
		
		<View 
		    android:layout_width="match_parent"
		    android:layout_height="1dp"
		    android:background="#FFFFFF"
		    android:visibility="gone"/>
		
		<RelativeLayout 
		    android:id="@+id/btnGarden"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:padding="10dp"
		    android:visibility="gone">
		    <ImageView 
		        android:id="@+id/icGarden"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@drawable/ic_map"
		        android:layout_centerVertical="true"
		        android:layout_marginLeft="4dp"
		        android:paddingLeft="3dp"
		        android:paddingRight="3dp"
		       />
		    
		    
		    
		    <FrameLayout 
		        android:id="@+id/layoutInnerBtnGarden"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentRight="true"
		        android:layout_centerVertical="true">
		        <ImageView 
		            android:id="@+id/imgGardenDetail"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:src="@drawable/ic_disclosure_default"/>
		    </FrameLayout>
		    
		    <TextView
		        android:id="@+id/lblGarden"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/audio_guide_garden"
		        android:layout_centerVertical="true"
		         android:layout_marginLeft="16dp"
		        android:layout_marginRight="16dp"
		        android:layout_toRightOf="@id/icGarden"
		        android:layout_toLeftOf="@id/layoutInnerBtnGarden"/>
		    
		    
		</RelativeLayout>
		
		<View 
		    android:layout_width="match_parent"
		    android:layout_height="1dp"
		    android:background="#DADADA"
		    android:visibility="gone"/>
		
		<TextView 
		    android:id="@+id/fieldDescription"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:padding="21dp"
		    android:textColor="#272727"
		    android:textSize="17sp"/>
		
	</LinearLayout>
</ScrollView>