<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >

    
    <ListView 
        android:id="@+id/listLanguages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:cacheColorHint="@android:color/transparent"
        android:divider="#DADADA"
        android:dividerHeight="1dp"></ListView>
    
    <TextView 
	     android:id="@+id/lblLanguageDesc"
	     android:layout_width="match_parent"
	     android:layout_height="wrap_content"
	     android:text="@string/select_fav_language"
	     android:gravity="center"
	     android:paddingTop="10dp"
	     android:paddingBottom="10dp"
	     android:paddingLeft="35dp"
	     android:paddingRight="35dp"
	     android:textColor="@android:color/black"
	     android:textAppearance="@android:style/TextAppearance.Medium"
	     android:background="#E2E7E8"
	     android:layout_above="@id/listLanguages"
	     android:minLines="3"/> 
    
    <com.ezenit.customview.IsoleTextView 
        android:id="@+id/lblWelcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/welcome"
        android:gravity="center"
        android:textStyle="bold"
        android:padding="15dp"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:background="#E2E7E8"
   		android:layout_above="@id/lblLanguageDesc" 
         android:layout_gravity="bottom"/>
    
   
   <ImageView 
       android:id="@+id/imgMuseum"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:scaleType="centerCrop"
       android:src="@drawable/bg_language"
       android:layout_above="@id/lblWelcome"/>
	    

</RelativeLayout>
