<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:focusable="true"
    android:focusableInTouchMode="true">
    <RelativeLayout
        android:id="@+id/layoutSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F4F4F4"
         android:paddingLeft="20dp"
        android:paddingRight="20dp"
        >
        <ImageButton
            android:id="@+id/btnMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:visibility="gone"
            android:background="@drawable/btn_map"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="5dp"/>
        <RelativeLayout 
            android:id="@+id/layoutFieldSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/btnMap"
            android:paddingTop="16dp"
	        android:paddingBottom="21dp">
	        <RelativeLayout 
	            android:id="@+id/layoutFieldSearchInner"
	            android:layout_width="match_parent"
	            android:layout_height="39dp"
	            android:layout_marginRight="29dp"
	            android:background="@drawable/bg_field">
	            <TextView 
	                android:id="@+id/btnClear"
	                android:layout_width="25dp"
	                android:layout_height="25dp"
	                android:text="X"
	                android:gravity="center"
	                android:textColor="#689099"
	                android:layout_centerVertical="true"
	                android:background="@drawable/bg_circle"
	                android:layout_alignParentRight="true"
	                android:layout_marginRight="10dp"/>

				<EditText
					android:id="@+id/fieldSearch"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_toLeftOf="@id/btnClear"
					android:background="@android:color/transparent"
					android:gravity="start|center_vertical"
					android:hint="@string/search_by_code"
					android:imeOptions="actionSearch"
					android:paddingLeft="15dp"
					android:paddingRight="15dp"
					android:singleLine="true"
					android:textAppearance="@android:style/TextAppearance.Small"
					android:textColor="#666666"
					android:textColorHint="#979797"
					android:textCursorDrawable="@drawable/cursor" />
	        </RelativeLayout>
        </RelativeLayout>
        
    </RelativeLayout>
	<ExpandableListView 
	    android:id="@+id/list"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:cacheColorHint="@android:color/transparent"
	    android:divider="#CCCCCC"
	    android:childDivider="#CCCCCC"
	    android:background="#FFFFFF"
	    android:groupIndicator="@null"
	    android:childIndicator="@null"
	    android:drawSelectorOnTop="false"
	    android:listSelector="@drawable/bg_list_row_white_selected"
	    android:dividerHeight="1dp"></ExpandableListView>
</LinearLayout>
