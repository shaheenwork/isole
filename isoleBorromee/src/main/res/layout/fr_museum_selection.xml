<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <LinearLayout 
        android:id="@+id/layout_museum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="@android:color/black">
        
        <View 
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#595959"/>
        
        <RelativeLayout 
            android:id="@+id/btnIsolaBella"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_list_row_black">
            
             <ImageView 
                android:id="@+id/iconIsolaBela"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_museum_list_detail"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"/>

            <TextView
                android:id="@+id/lblIsolaBela"
                style="@style/LblMuseumSelection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_toLeftOf="@id/iconIsolaBela"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="@string/isola_bella" />
        </RelativeLayout>
        
        <View 
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:background="#595959"
           android:layout_marginLeft="22dp"/>
        
        <RelativeLayout 
            android:id="@+id/btnIsolaMadre"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
             android:background="@drawable/bg_list_row_black">
            
             <ImageView 
                android:id="@+id/iconIsolaMadre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_museum_list_detail"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"/>

            <TextView
                android:id="@+id/lblIsolaMadre"
                style="@style/LblMuseumSelection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_toLeftOf="@id/iconIsolaMadre"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="@string/isola_madre" />
        </RelativeLayout>
        
        <View 
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:background="#595959"
           android:layout_marginLeft="22dp"/>
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/btnRoccaDAngera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_list_row_black">
            <ImageView 
                android:id="@+id/iconRoccaDAngera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_museum_list_detail"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"/>

            <TextView
                android:id="@+id/lblRoccaDAngera"
                style="@style/LblMuseumSelection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_toLeftOf="@id/iconRoccaDAngera"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="@string/rocca_d_angera" />
        </RelativeLayout>
    </LinearLayout>
    
    <ImageView 
        android:id="@+id/imgBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_home"
        android:scaleType="centerCrop"
        android:layout_above="@id/layout_museum"/>
 
    <ImageView 
        android:id="@+id/imgLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_logo_museum"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:background="@android:color/black"/>
        
    <FrameLayout 
        android:id="@+id/layoutTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/black">
	    
    </FrameLayout>
    
    <ImageView 
        android:id="@+id/btnSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_settings"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="8dp"/>
    
</RelativeLayout>
